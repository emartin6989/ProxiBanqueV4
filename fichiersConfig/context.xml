<Context>

	<!-- Default set of monitored resources. If one of these changes, the -->
	<!-- web application will be reloaded. -->
	<WatchedResource>WEB-INF/web.xml</WatchedResource>
	<WatchedResource>${catalina.base}/conf/web.xml</WatchedResource>

	<!-- Uncomment this to disable session persistence across Tomcat restarts -->
	<!-- <Manager pathname="" /> -->

	<!-- DECLARATION DATASOURCE -->
	<Resource auth="Container" driverClassName="com.mysql.jdbc.Driver"
		maxActive="100" maxIdle="30" maxWait="10000" name="jdbc/jaas"
		password="" type="javax.sql.DataSource"
		url="jdbc:mysql://localhost/proxibanque?autoReconnect=true" username="root" />


	<!-- DECLARATION REALM -->
	<Realm className="org.apache.catalina.realm.DataSourceRealm"
		dataSourceName="jdbc/jaas" localDataSource="true" userTable="personne"
		userRoleTable="role" roleNameCol="role" userCredCol="password"
		userNameCol="email">
		<CredentialHandler
			className="org.apache.catalina.realm.MessageDigestCredentialHandler"
			algorithm="SHA-1" />
	</Realm>

</Context>